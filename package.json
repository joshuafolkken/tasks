{
	"name": "tasks",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
	"scripts": {
		"preinstall": "npx only-allow pnpm && pnpm dlx @aikidosec/safe-chain setup-ci",
		"postinstall": "lefthook install",
		"setup:security": "safe-chain setup",
		"dev": "vite dev",
		"dev:cloudflare": "pnpm run build && wrangler dev --remote",
		"build:images": "tsx scripts/generate-webp-images.ts",
		"build": "vite build",
		"deploy": "pnpm run build && wrangler deploy",
		"preview": "wrangler dev .svelte-kit/cloudflare/_worker.js --port 4173",
		"preview:normal": "vite preview",
		"preview:stop": "pnpm exec kill-port 4173 || true",
		"prepare": "pnpm run types && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "svelte-kit sync && prettier --check . && pnpm run lint:eslint",
		"lint:eslint": "eslint . --cache --cache-strategy content",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"types": "rm -f .svelte-kit/cloudflare/_worker.* && wrangler types",
		"lefthook:install": "lefthook install",
		"lefthook:uninstall": "lefthook uninstall",
		"lefthook:commit": "lefthook run pre-commit",
		"lefthook:push": "lefthook run pre-push",
		"check-commit-message": "tsx scripts/check-commit-message.ts",
		"prevent-main-commit": "tsx scripts/prevent-main-commit.ts",
		"git": "tsx scripts/git-workflow.ts",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@aikidosec/safe-chain": "^1.4.2",
		"@chromatic-com/storybook": "^5.0.0",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@inlang/paraglide-js": "^2.9.1",
		"@libsql/client": "^0.17.0",
		"@playwright/test": "^1.57.0",
		"@storybook/addon-a11y": "^10.2.3",
		"@storybook/addon-docs": "^10.2.3",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.2.3",
		"@storybook/sveltekit": "^10.2.3",
		"@stylistic/eslint-plugin": "^5.7.0",
		"@sveltejs/adapter-cloudflare": "^7.2.5",
		"@sveltejs/adapter-node": "^5.5.1",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.1.0",
		"@vitest/browser-playwright": "^4.0.17",
		"@vitest/coverage-v8": "^4.0.18",
		"cspell": "^9.6.0",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-storybook": "^10.2.3",
		"eslint-plugin-svelte": "^3.14.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^17.0.0",
		"kill-port": "^2.0.1",
		"lefthook": "2.0.15",
		"mdsvex": "^0.12.6",
		"playwright": "^1.57.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"storybook": "^10.2.3",
		"svelte": "^5.47.1",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.17",
		"vitest-browser-svelte": "^2.0.1",
		"wrangler": "^4.59.3"
	},
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"sharp": "^0.34.5"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "^0.25.0",
			"cookie": "^0.7.0",
			"undici": "^7.18.2"
		},
		"onlyBuiltDependencies": [
			"esbuild",
			"lefthook",
			"sharp",
			"unrs-resolver",
			"workerd"
		]
	}
}
